{
  "compilerOptions": {
    
    "target": "es2022",                                  
    "module": "commonjs",   
    "paths": {
      "@noble/hashes": [
        "/path/to/node_modules/@noble/hashes"
      ]
    },                             
    "forceConsistentCasingInFileNames": true,            
    "strict": false,                                     
    "noImplicitAny": false,               
    "skipLibCheck": true,
    "allowJs": true   
                                 
  }
}
