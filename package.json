{
  "name": "ec-elgamal-circuit",
  "version": "2.0.0",
  "description": "Circom2 Circuit of ElGamal Scheme over Babay Jubjub Curve",
  "main": "index.js",
  "scripts": {
    "fetch_table": "yarn ts-node ./build/fetch_table",
    "test": "ts-mocha --timeout 500000 ./test/*.test.ts --exit",
    "test-utils": "ts-mocha --timeout 500000 ./build/test/*.test.ts",
    "circom:dev": "yarn hardhat circom --deterministic --verbose",
    "delete-artifacts": "hardhat clean & rm -r contracts",
    "delete-lookupTables": "rm ./lookupTables/*.json",
    "precompute-lookupTable": "yarn ts-node ./build/precompute.ts",
    "bench-add": "snarkjs ri ./artifacts/addPoint_test.r1cs",
    "bench-multiply": "snarkjs ri ./artifacts/multiplyPoint_test.r1cs",
    "bench-double": "snarkjs ri ./artifacts/doublePoint_test.r1cs",
    "bench-encrypt": "snarkjs ri ./artifacts/encrypt_test.r1cs",
    "bench-decrypt": "snarkjs ri ./artifacts/decrypt_test.r1cs",
    "benchmark-ec": "yarn bench-add && yarn bench-double && yarn bench-multiply",
    "benchmark-elgamal": "yarn bench-encrypt && yarn bench-decrypt",
    "benchmark": "yarn benchmark-ec && yarn benchmark-elgamal"
  },
  "keywords": [
    "ZKP",
    "circom2",
    "elgamal",
    "homomorphic",
    "alt_bn128"
  ],
  "author": "Shigoto-dev19",
  "license": "ISC",
  "devDependencies": {
    "@noble/curves": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^2.0.1",
    "circomlib": "^2.0.5",
    "cli-progress": "^3.11.2",
    "fs": "^0.0.1-security",
    "hardhat": "^2.17.1",
    "hardhat-circom": "^3.3.2",
    "mocha": "^10.2.0",
    "snarkjs": "^0.7.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
